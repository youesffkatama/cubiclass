# Example environment file. Copy to `.env` and fill values.

PORT=3000
MONGODB_URI="mongodb+srv://<username>:<password>@cluster.example.mongodb.net/<dbname>?retryWrites=true&w=majority"
REDIS_HOST="your-redis-host"
REDIS_PORT=6379
REDIS_PASSWORD="your-redis-password"
JWT_SECRET="replace-with-random-secret"
JWT_REFRESH_SECRET="replace-with-random-secret"
OPENAI_API_KEY="your-openai-or-openrouter-key"
FRONTEND_URL=http://localhost:3000

# For production, set these values using your hosting provider secrets store instead of committing them to git.